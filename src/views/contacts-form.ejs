<%- include('includes/head')  %>
    <%- include('includes/navbar')  %>
    <div class="container">
        <div class="row">
            <div class="col-lg-3"></div>

            <div class="col-lg-6 my-2">
                <h1 class="text-center">Contatos</h1>
                <p class="text-center">Criar ou editar contatos</p>
                <% if(contactId._id){ %>
                    <form  action="/contato/edit/<%= contactId._id  %>" method="post">  
                <% }else{ %>
                    <form  action="/contato" method="post">
                <% } %>
                            
                <%- include('includes/messages'); %>

                   <input type="hidden" value="<%= csrfToken  %>" name="_csrf">
                   <input type="hidden" value="<%= locals.user._id  %>" name="createdBy">

                    <div class="mb-3">
                      <label for="nameInput" class="form-label">Nome</label>
                      <input value="<%=  contactId.name %>" type="text" name="name" class="form-control" id="nameInput">
                    </div>

                    <div class="mb-3">
                        <label for="lastNameInput" class="form-label">Sobrenome</label>
                        <input value="<%=  contactId.lastName %>" type="text" name="lastName" class="form-control" id="lastNameInput">
                    </div>

                    <div class="mb-3">
                        <label for="emailInput" class="form-label">Email</label>
                        <input value="<%=  contactId.email %>" type="email" name="email" class="form-control" id="emailInput">
                    </div>

                    <div class="mb-3">
                        <label for="telephoneInput" class="form-label">Telefone</label>
                        <input value="<%=  contactId.telephone %>" type="tel" name="telephone" class="form-control" id="telephoneInput">
                    </div>

                    <div class="d-grid">
                        <% if(contactId._id){ %>
                            <button type="submit" class="btn btn-primary btn-block mb-2">Salvar</button>
                        <% }else{ %>
                            <button type="submit" class="btn btn-primary btn-block mb-2">Criar</button>
                        <% } %>
                    </div>
                  </form>

            </div>

            <div class="col-lg-3"></div>
        </div>
    </div>
<%- include('includes/footer')  %>
